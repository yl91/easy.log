
@{
    ViewBag.Title = "Manage";
    Layout = "~/Views/Shared/MainLayout.cshtml";
    List<Easy.Log.Application.Models.Relation.PendingUserRelationModel> list = ViewBag.list;
}

@section css
{
    <link href="~/Content/plugins/datatables/dataTables.bootstrap.css" rel="stylesheet" />
}

@section scripts
{
    <script src="~/Content/plugins/datatables/dataTables.bootstrap.js"></script>
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            用户列表
        </h1>
        <ol class="breadcrumb">
            <li><a href="\"><i class="fa fa-th"></i> Home</a></li>
            <li class="active">用户列表</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title"></h3>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">

                            <div class="row">
                                <div class="col-sm-12">
                                    <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
                                        <thead>
                                            <tr role="row">
                                                <th class="_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 245px;">
                                                    邀请人
                                                </th>
                                                <th class="" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 301px;">
                                                    应用
                                                </th>
                                                <th class="" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 266px;">
                                                    是否同意
                                                </th>
                                                <th class="" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 266px;">
                                                    时间
                                                </th>
                                                <th class="" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 266px;">
                                                    操作
                                                </th>
                                        </thead>
                                        <tbody>
                                            
                                                @foreach (var item in list)
                                                {
                                                    <tr role="row">
                                                        <td>@item.InvietUserName</td>
                                                        <td>@item.AppName</td>
                                                        <td>@item.IsAccept</td>
                                                        <td>@item.CreateDate</td>
                                                        @if (!item.IsAccept)
                                                        {
                                                        <td><a class="btn btn-default" href="@Url.Action("AgreePost",new { id=item.Id })" role="button">同意</a></td>
                                                        }
                                                        else
                                                        {
                                                        <td></td>
                                                        }
                                                    </tr>
                                                }
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                        </div>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div><!-- /.col -->
        </div>
    </section>
</div>





