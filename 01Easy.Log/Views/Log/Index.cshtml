
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayout.cshtml";

    Easy.Log.Application.Models.PageList<Easy.Log.Application.Models.Log.LogModel> page = ViewBag.list;
    var index = ViewBag.index;
    var pUlr = string.Empty;
    var nUrl = string.Empty;
}

@section css
{
    <link href="~/Content/plugins/datatables/dataTables.bootstrap.css" rel="stylesheet" />
}

@section scripts
{
    <script src="~/Content/plugins/datatables/dataTables.bootstrap.js"></script>
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            日志列表
        </h1>
        <ol class="breadcrumb">
            <li><a href="\"><i class="fa fa-th"></i> Home</a></li>
            <li class="active">日志列表</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">

                <div class="box">
                    @*<div class="box-header">
                        <h3 class="box-title"></h3>
                    </div>*@<!-- /.box-header -->
                    <div class="box-body">
                        <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                            <div class="row"><div class="col-sm-6"><div class="dataTables_length" id="example1_length">
                                </div></div><div class="col-sm-6"><div id="example1_filter" class="dataTables_filter">
                                <label>Search:<input type="search" class="form-control input-sm" placeholder="" aria-controls="example1"></label>
                                </div></div></div><div class="row">
                                <div class="col-sm-12">
                                    <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
                                        <thead>
                                            <tr role="row">
                                                <th class="_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 245px;">ID</th>
                                                <th class="" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 301px;">应用名称</th>
                                                <th class="" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 266px;">信息</th>
                                                <th class="" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Engine version: activate to sort column ascending" style="width: 213px;">Tag</th>
                                                <th class="" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 157px;">级别</th>
                                                <th class="" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 157px;">IP</th>
                                                <th class="" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 157px;">时间</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in page.Collections)
                                            {
                                                <tr role="row" class="odd">
                                                    <td class="sorting_1">@item.Id</td>
                                                    <td>@item.AppName</td>
                                                    <td>@item.Message</td>
                                                    <td>@item.Tag</td>
                                                    <td>@item.LogLevel</td>
                                                    <td>@item.Ip</td>
                                                    <td>@item.CreateDate</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div><div class="row">
                            <div class="col-sm-5">
                                <div class="dataTables_info" id="example1_info" role="status" aria-live="polite">total:@page.TotalRows</div>
                            </div>
                            <div class="col-sm-7">
                                <div class="dataTables_paginate paging_simple_numbers" id="example1_paginate">
                                <ul class="pagination">

                                    <li class="paginate_button previous @ViewBag.Pdisabled" id="example1_previous">
                                    
                                    

                                    @if (string.IsNullOrEmpty(ViewBag.Pdisabled))
                                    {
                                        pUlr = Url.Action("Index", new { pageIndex = (index - 1) });
                                    }
                                    else
                                    {
                                        pUlr = Url.Action("Index", new { pageIndex = index});
                                    }

                                    @if (string.IsNullOrEmpty(ViewBag.Ndisabled))
                                    {
                                        nUrl = Url.Action("Index", new { pageIndex = (index + 1) });
                                    }
                                    else
                                    {
                                        nUrl = Url.Action("Index", new { pageIndex = index });
                                    }

                                    <a href="@pUlr" aria-controls="example1" data-dt-idx="@index" tabindex="0">Previous</a></li>
                                    @for (int i = 0; i < ViewBag.pageCount; i++)
                                    {
                                        var tag = string.Empty;
                                        if (@index ==(i+1))
                                        {
                                            tag = "active";
                                        }
                                        <li class="paginate_button @tag"><a href="@Url.Action("Index",new { pageIndex=(i+1)})" aria-controls="example1" data-dt-idx="@(i+1)" tabindex="0">@(i + 1)</a></li>
                                    }
                                    <li class="paginate_button next @ViewBag.Ndisabled" id="example1_next">
                                    <a href="@nUrl" aria-controls="example1" data-dt-idx="@index" tabindex="0">Next</a></li>

                                    </ul></div></div>
                            </div>
                        </div>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div><!-- /.col -->
        </div>

    </section>
</div>
